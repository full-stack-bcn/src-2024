generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "zod-prisma-types"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

enum Difficulty {
  easy
  medium
  expert
}

model Recipes {
  id          String     @id @default(uuid())
  title       String
  description String?
  createdAt   DateTime   @default(now())
  difficulty  Difficulty
  prepMinutes Int
  tags        String[]
  private     Boolean    @default(true)

  ingredients RecipeIngredient[]
  users       RecipeUser[]
}

enum Units {
  grams
  kilograms
  millilitres
  litres
  dimensionless
}

model Ingredients {
  id    Int    @id @default(sequence())
  name  String @unique
  units Units

  recipes RecipeIngredient[]
}

model Users {
  id             String   @id @default(uuid())
  username       String   @unique
  hashedPassword String
  fullname       String?
  createdAt      DateTime @default(now())

  recipes RecipeUser[]
}

model RecipeIngredient {
  amount        Float
  recipes       Recipes     @relation(fields: [recipesId], references: [id], onDelete: Cascade)
  recipesId     String
  ingredients   Ingredients @relation(fields: [ingredientsId], references: [id])
  ingredientsId Int

  @@id([recipesId, ingredientsId])
}

enum Role {
  owner
  editor
  viewer
}

model RecipeUser {
  role      Role
  users     Users   @relation(fields: [usersId], references: [id])
  usersId   String
  recipes   Recipes @relation(fields: [recipesId], references: [id], onDelete: Cascade)
  recipesId String

  @@id([usersId, recipesId])
}
